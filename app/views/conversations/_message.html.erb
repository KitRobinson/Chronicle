<div class="card horizontal">

	<div class="card-picture">
		<%= image_tag(message.user.profilepic, height: "75", width: "75", style: "object-fit: contain;") %>
	</div>
	
	<div class="card-stacked">
		<div clase="card-content">
			<span class="sender-name"> From:
				<%= message.user.username %>
			</span>
			<span> At: 
				<%= message.created_at %>
			</span>
		</div>
		<div class="card-content">
			<%= message.content %>
		</div>
	</div>

</div>