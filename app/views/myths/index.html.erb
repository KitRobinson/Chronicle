<p id="notice"><%= notice %></p>

<h1>Listing Myths</h1>

<table>
  <thead>
    <tr>
      <th>Myth pic</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myths.each do |myth| %>
      <tr>
        <td><%= myth.myth_pic %></td>
        <td><%= myth.title %></td>
        <td><%= myth.content %></td>
        <td><%= link_to 'Show', myth %></td>
        <td><%= link_to 'Edit', edit_myth_path(myth) %></td>
        <td><%= link_to 'Destroy', myth, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

