<p id="notice"><%= notice %></p>

<h1>Listing Actors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Race</th>
      <th>Might</th>
      <th>Will</th>
      <th>Cunning</th>
      <th>Subtlety</th>
      <th>Perception</th>
      <th>Sagacity</th>
      <th>Province</th>
      <th>Organization</th>
      <th>Scale</th>
      <th>Count</th>
      <th>Personality</th>
      <th>Mood</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.description %></td>
        <td><%= actor.race_id %></td>
        <td><%= actor.might %></td>
        <td><%= actor.will %></td>
        <td><%= actor.cunning %></td>
        <td><%= actor.subtlety %></td>
        <td><%= actor.perception %></td>
        <td><%= actor.sagacity %></td>
        <td><%= actor.province_id %></td>
        <td><%= actor.organization_id %></td>
        <td><%= actor.scale %></td>
        <td><%= actor.count %></td>
        <td><%= actor.personality %></td>
        <td><%= actor.mood %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

