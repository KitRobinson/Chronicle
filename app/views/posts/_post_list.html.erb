<table class="responsive-table highlight">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>Responses</th>
      <th>Most Recent</th>
      <th>Posted On</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% puts "\n\n\n ---- ref = #{@ref}" %>
      <% puts "---- post = #{post} \n\n\n" %>
      <% if post.reference_id == @ref %>
        <% @lpost = post %>
        <tr>
        <%= render "list_item", :layout => false, locals: {post: @lpost} %>
        </tr>
        <%end%>
    <% end %>
  </tbody>
</table>

