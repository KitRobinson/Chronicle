<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="responsive-table highlight">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Responses</th>
      <th>Most Recent</th>
      <th>Posted On</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.reference == nil %>
        <% @post = post %>
        <tr>
        <%= render "list_item", :layout => false, locals: {post: @post} %>
        </tr>
        <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
